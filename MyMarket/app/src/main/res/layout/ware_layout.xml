<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.synnapps.carouselview.CarouselView
            android:id="@+id/ware_layout_carouselView"
            android:layout_width="match_parent"
            android:layout_height="326dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp">



        </com.synnapps.carouselview.CarouselView>


        <TextView
            android:textStyle="bold"
            android:id="@+id/ware_layout_name"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true" />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_below="@+id/ware_layout_name"
            android:textStyle="bold"
            android:id="@+id/ware_layout_price"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true" />
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/ware_layout_description"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/category_name_ware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/wareCategory"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/market_name_ware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/marketName"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/ware_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/describe_your_position"/>


        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/addInCart_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/add_in_cart" />
    </LinearLayout>


</ScrollView>