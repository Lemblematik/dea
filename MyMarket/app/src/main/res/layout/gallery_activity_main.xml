<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/takeFotoLayout"
        android:layout_width="wrap_content"
        android:layout_height="73dp">


        <ImageButton
            android:id="@+id/play_buttonCamera"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:onClick="buttonCameraPressed"
            android:foregroundGravity="center"
            android:layout_marginLeft="140dp"
            android:src="@drawable/ic_photo_camera_black_90dp" />

    </RelativeLayout>


    <include
        android:layout_marginTop="80dp"
        layout="@layout/gallerie_content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <RelativeLayout
        android:id="@+id/layoutSend"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone">


        <ImageView
            android:id="@+id/button_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/background_button_send"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@android:drawable/ic_menu_send" />

        <TextView
            android:id="@+id/textViewSeletedCount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/background_count_selected_button"
            android:gravity="center"
            android:minWidth="20dp"
            android:minHeight="20dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/button_send"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintRight_toRightOf="@id/button_send"
            app:layout_constraintTop_toTopOf="@id/button_send" />
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>